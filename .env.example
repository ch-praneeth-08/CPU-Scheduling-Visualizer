# ============================================
# CPU Scheduling Visualizer - Environment Variables
# ============================================
# This file contains example environment variables for the application.
# Copy this file to .env.local for local development.
# 
# IMPORTANT: All client-side environment variables MUST be prefixed with VITE_
# to be exposed to your application. Variables without the VITE_ prefix will
# not be available in the browser.
#
# Usage:
#   cp .env.example .env.local
#   Edit .env.local with your actual values
# ============================================

# --------------------------------------------
# Application Configuration
# --------------------------------------------

# Application name displayed in the UI
VITE_APP_NAME=CPU Scheduling Visualizer

# Application version (defaults to package.json version if not set)
VITE_APP_VERSION=1.0.0

# Environment: development, staging, production
VITE_APP_ENV=development

# Base URL for the application (useful for deployments in subdirectories)
VITE_BASE_URL=/

# --------------------------------------------
# API Configuration
# --------------------------------------------

# Backend API base URL (if you have a backend service)
VITE_API_BASE_URL=https://api.example.com/v1

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# Enable API request logging
VITE_API_LOGGING=true

# --------------------------------------------
# Feature Flags
# --------------------------------------------

# Enable/disable experimental features
VITE_FEATURE_EXPERIMENTAL_ALGORITHMS=false

# Enable export functionality (CSV, JSON, PDF)
VITE_FEATURE_EXPORT_ENABLED=true

# Enable process statistics and metrics
VITE_FEATURE_METRICS_ENABLED=true

# Enable dark mode support
VITE_FEATURE_DARK_MODE=true

# Enable process comparison mode
VITE_FEATURE_COMPARISON_MODE=false

# Enable advanced visualization options
VITE_FEATURE_ADVANCED_VISUALIZATION=false

# Maximum number of processes allowed
VITE_MAX_PROCESSES=20

# Enable real-time algorithm simulation
VITE_FEATURE_REALTIME_SIMULATION=true

# --------------------------------------------
# Analytics & Monitoring
# --------------------------------------------

# Google Analytics Measurement ID
# Example: G-XXXXXXXXXX
VITE_GOOGLE_ANALYTICS_ID=

# Enable analytics tracking
VITE_ANALYTICS_ENABLED=false

# Sentry DSN for error tracking
# Example: https://examplePublicKey@o0.ingest.sentry.io/0
VITE_SENTRY_DSN=

# Enable error tracking
VITE_ERROR_TRACKING_ENABLED=false

# Application Insights Instrumentation Key (Azure)
VITE_APP_INSIGHTS_KEY=

# --------------------------------------------
# Third-Party Services
# --------------------------------------------

# Firebase configuration (if using Firebase)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=

# --------------------------------------------
# UI Configuration
# --------------------------------------------

# Default theme: light, dark, system
VITE_DEFAULT_THEME=light

# Enable animations
VITE_ANIMATIONS_ENABLED=true

# Animation speed: slow, normal, fast
VITE_ANIMATION_SPEED=normal

# Default algorithm: fcfs, sjf, srtf, priority, rr, mlfq
VITE_DEFAULT_ALGORITHM=fcfs

# Show tutorial on first visit
VITE_SHOW_TUTORIAL=true

# --------------------------------------------
# Performance & Optimization
# --------------------------------------------

# Enable service worker for offline support
VITE_ENABLE_SERVICE_WORKER=false

# Enable performance monitoring
VITE_PERFORMANCE_MONITORING=false

# Maximum Gantt chart render items (prevent browser freeze)
VITE_MAX_GANTT_ITEMS=1000

# --------------------------------------------
# Development & Debugging
# --------------------------------------------

# Enable debug mode (shows additional logging)
VITE_DEBUG=false

# Enable React DevTools profiling
VITE_REACT_PROFILING=false

# Show performance metrics in UI
VITE_SHOW_PERFORMANCE_METRICS=false

# Enable verbose logging
VITE_VERBOSE_LOGGING=false

# --------------------------------------------
# Security
# --------------------------------------------

# Content Security Policy reporting endpoint
VITE_CSP_REPORT_URI=

# Enable CORS for API requests (list of allowed origins)
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# --------------------------------------------
# Localization (i18n)
# --------------------------------------------

# Default language: en, es, fr, de, etc.
VITE_DEFAULT_LOCALE=en

# Available languages (comma-separated)
VITE_AVAILABLE_LOCALES=en,es,fr

# Enable internationalization
VITE_I18N_ENABLED=false

# --------------------------------------------
# Social & Sharing
# --------------------------------------------

# GitHub repository URL
VITE_GITHUB_URL=https://github.com/yourusername/cpu-scheduling-visualizer

# Documentation URL
VITE_DOCS_URL=https://docs.example.com

# Support/Contact email
VITE_SUPPORT_EMAIL=support@example.com

# Social media links
VITE_TWITTER_URL=https://twitter.com/yourusername
VITE_LINKEDIN_URL=https://linkedin.com/in/yourusername

# --------------------------------------------
# Notes
# --------------------------------------------
# - Never commit .env.local or .env.production files to version control
# - Keep sensitive data (API keys, secrets) in .env.local only
# - Use .env.example as a template for required variables
# - Boolean values should be: true or false (lowercase)
# - Number values should be without quotes: 100 (not "100")
# - String values can be with or without quotes
